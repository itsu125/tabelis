<div class="max-w-md mx-auto p-6 bg-t-light-header rounded-xl shadow-2xl border border-t-border my-8 text-t-dark">
  
  <h2 class="text-3xl font-extrabold text-t-primary mb-6">
    <div class="flex justify-center items-center gap-2">
      <%= image_tag "risu_no_backcolor.png", class: "h-10 w-10 object-cover rounded-full" %>
      <span class="text-3xl font-extrabold">新規アカウント登録</span>
    </div>
  </h2>

  <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
    <%# -- エラーメッセージ -- %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%# -- Name フィールド -- %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-sm font-medium mb-1 text-t-text-mid" %>
      <%= f.text_field :name, 
                       class: "w-full p-3 border border-t-border rounded-lg bg-white placeholder-gray-400 focus:ring-t-primary focus:border-t-primary focus:outline-none transition duration-150",
                       autofocus: true, 
                       autocomplete: "name" %>
    </div>

    <%# -- Email フィールド -- %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium mb-1 text-t-text-mid" %>
      <%= f.email_field :email, 
                        class: "w-full p-3 border border-t-border rounded-lg bg-white placeholder-gray-400 focus:ring-t-primary focus:border-t-primary focus:outline-none transition duration-150",
                        autocomplete: "email" %>
    </div>

    <%# -- Password フィールド -- %>
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium mb-1 text-t-text-mid" %>
      <% if @minimum_password_length %>
      <em class="text-xs text-gray-500 block mb-1">
        (<%= @minimum_password_length %>文字以上)
      </em>
      <% end %>
      <%= f.password_field :password, 
                           class: "w-full p-3 border border-t-border rounded-lg bg-white placeholder-gray-400 focus:ring-t-primary focus:border-t-primary focus:outline-none transition duration-150",
                           autocomplete: "new-password" %>
    </div>

    <%# -- Password Confirmation フィールド -- %>
    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1 text-t-text-mid" %>
      <%= f.password_field :password_confirmation, 
                           class: "w-full p-3 border border-t-border rounded-lg bg-white placeholder-gray-400 focus:ring-t-primary focus:border-t-primary focus:outline-none transition duration-150",
                           autocomplete: "new-password" %>
    </div>

    <%# -- Submit ボタン -- %>
    <div class="actions">
      <%= f.submit "登録する", 
                   class: "w-full py-4 text-lg font-bold text-white rounded-xl transition duration-200 cursor-pointer 
                           bg-t-primary shadow-[0_4px_0_0_#d8763a] active:shadow-[0_2px_0_0_#d8763a] active:translate-y-0.5" %>
    </div>
  <% end %>

  <%# -- 共有リンク -- %>
  <div class="mt-6 pt-4 border-t border-t-border text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>